<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gongza.novice.fragment.Tab03Fragment" >

    <com.gongza.views.movingimageview.MovingImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/miaosu"
            app:miv_load_on_create="true"
            app:miv_max_relative_size="3.0"
            app:miv_min_relative_offset="0.2"
            app:miv_repetitions="-1"
            app:miv_speed="50"
            app:miv_start_delay="1000"
            android:visibility="invisible" />
    
    <com.gongza.views.listviewtools.HehuaPullToRefreshView
        android:id="@+id/layout_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lv_tab3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>
    </com.gongza.views.listviewtools.HehuaPullToRefreshView>

</RelativeLayout>