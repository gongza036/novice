<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="CardView">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardMaxElevation">@dimen/cardview_default_elevation</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>
    <style name="CardView.Light">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>
    <style name="CardView.Dark">
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
    </style>

    <!-- 下拉刷新加载进度圈 -->
    <style name="head_loading_progress">
        <item name="android:indeterminateDrawable">@drawable/cube_ptr_head_loading_progress</item>
        <item name="android:minWidth">71.0dip</item>
        <item name="android:maxWidth">71.0dip</item>
        <item name="android:minHeight">57.0dip</item>
        <item name="android:maxHeight">57.0dip</item>
    </style>
    
    <!-- 上拉加载进度圈_g -->
    <style name="hehua_progressbar_g">
	　　<item name="android:indeterminateDrawable">@drawable/hehua_progress_g</item>
	　　<item name="android:minWidth">20dip</item>
	　　<item name="android:maxWidth">20dip</item>
	　　<item name="android:minHeight">20dip</item>
	　　<item name="android:maxHeight">20dip</item>
	</style>
    
    <style name="camera_pop_animation">
        <item name="android:windowEnterAnimation">@anim/camera_pop_in</item>
        <item name="android:windowExitAnimation">@anim/camera_pop_out</item>
    </style>
    
</resources>
